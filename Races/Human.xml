      <NoDisplay>false</NoDisplay>
      <Action>Hidden</Action>
      <Prerequisite />
      <Choices>
        <AbilityScoreFeature>
          <Keywords />
          <Name>Normal Human Ability Scores</Name>
          <Text>Your ability scores each increase by 1.</Text>
          <Level>1</Level>
          <Hidden>true</Hidden>
          <NoDisplay>false</NoDisplay>
          <Action>Hidden</Action>
          <Modifier>AddScore</Modifier>
          <Strength>1</Strength>
          <Constitution>1</Constitution>
          <Dexterity>1</Dexterity>
          <Intelligence>1</Intelligence>
          <Wisdom>1</Wisdom>
